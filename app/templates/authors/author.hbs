<h1>{{model.username}}</h1>
<hr>
<img src={{model.profilePicture}} alt=""><br>
First name: {{model.firstName}} <br>
Last name: {{model.lastName}} <br>
Email: {{model.email}}

<h3>Post:</h3>

{{#if model.posts}}
  <table class="table">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Published date</th>
      <th>Content</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.posts as |post|}}
        <tr>
        <td><button type="button" {{action 'delete' post}}>Delete Post</button> </td>
        <td>{{post.title}}</td>
        <td>{{post.publishedAt}}</td>
        <td>{{post.content}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
